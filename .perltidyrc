# these are the settings from the core Postgres project
# except as noted below
--add-whitespace
--backup-and-modify-in-place
--backup-file-extension=/
--delete-old-whitespace
--entab-leading-whitespace=4
--keep-old-blank-lines=2
# use line length 80 instead of 78
--maximum-line-length=80
--nooutdent-long-comments
--nooutdent-long-quotes
--nospace-for-semicolon
--opening-brace-on-new-line
--output-line-ending=unix
--paren-tightness=2
# don't use the vertical-tightness settings
# --vertical-tightness=2
# --vertical-tightness-closing=2
--valign-exclusion-list=", = => =~ |= || && if or qw unless"
